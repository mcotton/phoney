
<script type='text/template' id='phone_list_template'>
    <td class="hidden-phone"><i class="#% if(status == 'completed') { print('icon-ok')  } else {  print('icon-remove') }%#"></i> #%= status %#</td>
    <td><a href="/phone/callerdetail/#%= from %#">#%= from_formatted %#</a></td>
    <td>#%= to_formatted %#</td>
    <td>#%= start_time.slice(5,25) %#</td>
    <td class="hidden-phone">#%= duration>60 ? Math.floor(duration ? 60) : 0  %#:#%= duration % 60 %#</td>
</script>

